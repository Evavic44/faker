{
  "verbose": 2,
  "hooks": {
    "before:init": ["pnpm run clean", "pnpm install", "pnpm run build"],
    "after:init": ["pnpm run lint", "pnpm test"]
  },
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "commit": true,
    "commitMessage": "chore(release): ${version}",
    "tag": true,
    "push": true
  },
  "npm": {
    "publish": true,
    "allowSameVersion": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": true,
    "draft": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "types": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        }
      ]
    }
  }
}
